/**
Returns a random rank or no rank.
*/
getrank:
	local.ranks[1] = "Private "::"Pvt. "::"Pfc. "::"Corporal "::"Cpl. "::"Sergeant "::"Sgt. "::"Sfc. "
	local.ranks[2] = "Lieutenant "::"Lt. "::"1st Lt. "::"2nd Lt. "::"Captain "::"Capt. "::"Master "
	local.ranks[3] = "Lt. Col. "::"Major "::"Colonel "::"General "::"Commander "::"Dr. "::"Pro "
	local.ranks[4] = "Officer "::"1st Lieutenant "::"2nd Lieutenant "::"Mr. "::"Sir "::"Newbie "::"Automatic "
	local.ranksnum = randomint (local.ranks.size * 2) + 1
	if(local.ranksnum > local.ranks.size)
		end ""
	local.rank = local.ranks[local.ranksnum]
	local.ranknum = randomint local.rank.size + 1
	local.rankname = local.rank[local.ranknum]
end local.rankname


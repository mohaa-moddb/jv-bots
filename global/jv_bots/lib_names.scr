/**
Returns a random name.
*/
getname:	
	local.normalname = waitthread getnormalname
	local.prefix = waitthread level.jvbot_main_script::getrankedvar "[BoT]" level.jvbot_prefix jvbot_prefix string 1
	if(local.prefix == "none" || local.prefix == "NULL")
		local.prefix = ""
	local.rank = waitthread getrank
	local.fest = waitthread getfest
	local.fullname = local.prefix + local.fest[1] + local.rank + local.normalname + local.fest[2]
end local.fullname

